html(lang='en')  
    head  
        title="Mobile Test"
        link(rel="stylesheet", type="text/css", href="/css/mobile.css")
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        script(type="text/javascript", src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
        script(type="text/javascript", src="/js/general.js")
        script(type="text/javascript", src="/js/mobile.js")
        script(type="text/javascript", src="/js/mobile-data.js")
        script(type="text/javascript", src="/socket.io/socket.io.js")
body(class="mobile",data-id=id)
    div(class="mobile-container container-palette")
        div(id="brush-container")
            div(id="brush-circle",class="bg--blue")
        div(class="debug")
            <span class="count">0</span> <span class="sent">messages sent.</span>
        div(class="size-container")
            input(type="range",name="size",class="size-input",min="10",max="200")
        div(class="colors-container")
            form(class="colors-form")
                fieldset(class="colors-fieldset")
                    ul(class="colors-list")
                        li(class="color-item")
                            input(type="radio",name="color",class="color-input color-input--lightgrey bg--greyExtraLight",value="greyExtraLight",checked)
                        li(class="color-item")
                            input(type="radio",name="color",class="color-input color-input--blue bg--blue",value="blue",checked)
                        li(class="color-item")
                            input(type="radio",name="color",class="color-input color-input--green bg--green",value="green")
                        li(class="color-item")
                            input(type="radio",name="color",class="color-input color-input--yellow bg--yellow",value="yellow")
                        li(class="color-item")
                            input(type="radio",name="color",class="color-input color-input--red bg--red",value="red")
                        li(class="color-item")
                            input(type="radio",name="color",class="color-input color-input--black bg--black",value="black")
    div(class="mobile-container container-setup")
        div(class="setup-wrapper")
            h1(class="setup-title") drawmote
            div(class="code-container")
                div(class="code-entered")
                    div(class="code-entered-num code-entered-num--1")
                    div(class="code-entered-num code-entered-num--2")
                    div(class="code-entered-num code-entered-num--3")
                    div(class="code-entered-num code-entered-num--4")
                div(class="code-numpad")
                    div(class="code-numpad-num code-numpad-num--1",data-num="1")
                        div(class="code-numpad-num-text") 1
                    div(class="code-numpad-num code-numpad-num--2",data-num="2")
                        div(class="code-numpad-num-text") 2
                    div(class="code-numpad-num code-numpad-num--3",data-num="3")
                        div(class="code-numpad-num-text") 3
                    div(class="code-numpad-num code-numpad-num--4",data-num="4")
                        div(class="code-numpad-num-text") 4
                    div(class="code-numpad-num code-numpad-num--5",data-num="5")
                        div(class="code-numpad-num-text") 5
                    div(class="code-numpad-num code-numpad-num--6",data-num="6")
                        div(class="code-numpad-num-text") 6
                    div(class="code-numpad-num code-numpad-num--7",data-num="7")
                        div(class="code-numpad-num-text") 7
                    div(class="code-numpad-num code-numpad-num--8",data-num="8")
                        div(class="code-numpad-num-text") 8
                    div(class="code-numpad-num code-numpad-num--9",data-num="9")
                        div(class="code-numpad-num-text") 9
                    div(class="code-numpad-num code-numpad-num--0",data-num="0")
                        div(class="code-numpad-num-text") 0